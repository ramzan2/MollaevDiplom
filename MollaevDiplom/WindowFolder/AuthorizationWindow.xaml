<Window x:Class="MollaevDiplom.WindowFolder.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MollaevDiplom.WindowFolder"
        mc:Ignorable="d"
        Title="Окно авторизации" 
        Height="450" Width="450"
        MaxHeight="450" MinHeight="450"
        MaxWidth="450"  MinWidth="450"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Icon="/ResourceFolder/ImageFolder/IconColizeum-transformed.png">
    <Border Background="#FF16171B"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="10 10 0 0"
                    MouseDown="Border_MouseDown">
                <Border.Background>
                    <ImageBrush ImageSource="/ResourceFolder/ImageFolder/ScreenColizeum.png"
                                RenderOptions.BitmapScalingMode="HighQuality" 
                                RenderOptions.EdgeMode="Aliased"/>
                </Border.Background>
                <Image Source="/ResourceFolder/ImageFolder/close-button.png"
                       Style="{StaticResource imgClose}"
                       RenderOptions.BitmapScalingMode="HighQuality" 
                       RenderOptions.EdgeMode="Aliased"
                       MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
            </Border>
            <Image Source="/ResourceFolder/ImageFolder/window-minimize.png"
                   Style="{StaticResource imgClose}"
                   Margin="0,-4,29,0"
                   MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
            <TextBox Grid.Row="2"
                     Style="{StaticResource tbox}"
                     Tag="Логин"
                     x:Name="LoginTb"
                     TextChanged="LoginTb_TextChanged"/>
            <PasswordBox Grid.Row="4" 
                         Style="{StaticResource tpass}"
                         GotFocus="PasswordBox_GotFocus"
                         LostFocus="PasswordBox_LostFocus"
                         x:Name="PasswordTb"
                         PasswordChanged="PasswordTb_PasswordChanged"/>
            <TextBlock x:Name="placeholderText"
                       Text="Пароль"
                       Grid.Row="4"
                       Visibility="Visible"
                       Margin="135,32,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Foreground="#FFF2E437"
                       MouseDown="placeholderText_MouseDown"/>
            <Border Grid.Row="6"
                    Margin="25 0 25 0"
                    Height="35"
                    Width="255"
                    Background="#FFDECD00"
                    BorderThickness="1">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderBrush" Value="#FFF2E437"/>
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                        Duration="0:0:0.100" To="#FFF2E437"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                        Duration="0:0:0.100" To="#FF333842"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button Content="Авторизоваться" 
                        FontSize="16"
                        Foreground="White"
                        x:Name="LogInBtn"
                        Click="LogInBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Name="border"
                                                BorderThickness="0"
                                                BorderBrush="Black"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A68900"/>
                                            </Trigger>
                                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                            Duration="0:0:0.100" To="2,2,0,0"/>
                                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                                        To="#A68900" Duration="0:0:0.0002"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                            Duration="0:0:0.100" To="0"/>
                                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                                        To="#FFF2E437" Duration="0:0:0.0002"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
            <TextBlock Grid.Row="8"
                       Text="Забыли пароль?"
                       Foreground="#FFF2E437"
                       FontSize="8"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Обратитесь к администратору для восстановления пароля"
                       Foreground="#FFF2E437"
                       FontSize="8"
                       HorizontalAlignment="Center"
                       Grid.Row="8"
                       Margin="12"
                       Cursor="Hand"/>
            <TextBlock x:Name="timerText"
                       Grid.Row="5"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="8"
                       Foreground="Red"/>
        </Grid>
    </Border>
</Window>
